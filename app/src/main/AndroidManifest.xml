<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.studyenglish">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudyEnglish"
        tools:targetApi="31">


        <activity
            android:name=".Screens.StartMyScreen"
            />
        <activity
            android:name=".Screens.TaskMyScreen"
            />
        <activity
            android:name=".Screens.AuthorizationMyScreen"
            />
        <activity
            android:name=".Screens.SettingsMyScreen"
            />
        <activity
            android:name=".Screens.RegistrationMyScreen"
            />
        <activity
            android:name=".Screens.OkMyScreen"
            />
        <activity
            android:name=".Screens.ErrorMyScreen"
            />
        <activity
            android:name=".Screens.Holder"
            />
        <activity
            android:name=".Screens.AddTasksMyScreen"
            />


        <activity
            android:name=".Main"
            android:exported="true"
            tools:ignore="Instantiatable">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>